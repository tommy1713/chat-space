.chat-side
  .side-header
    .side-header__box
      .side-header__box__username 
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__new-group
          = link_to new_group_path do
            = icon("fa","edit", class: "new-btn")
        .side-header__box__menu__user-edit
          = link_to edit_user_path(current_user) do
            = icon("fa","cog", class: "cog-btn")
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name 
            = group.name
          .group__last-message
